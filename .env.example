# Example .env file for Lixinger API Proxy
# Copy this file to .env and fill in your actual values

# Required: Your Lixinger API token
LXR_API_TOKEN=your_token_here

# Optional: Cache TTL in seconds (default: 36000 = 10 hours)
# CACHE_TTL_SECONDS=36000

# Optional: Maximum number of cached items (default: 5000)
# CACHE_MAX_SIZE=5000

# Optional: Rate limit window in seconds (default: 60 = 1 minute)
# RATE_LIMIT_WINDOW_SECONDS=60

# Optional: Maximum requests per window (default: 10)
# RATE_LIMIT_MAX_REQUESTS=10

# Optional: Maximum wait time when rate limited in seconds (default: 600 = 10 minutes)
# RATE_LIMIT_MAX_WAIT_SECONDS=600
